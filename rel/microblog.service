[Unit]
Description=Microblog
After=network.target

[Service]
Type=forking
User=kim
Group=microblog
WorkingDirectory=/home/kim/microblog
ExecStart=/home/kim/microblog/bin/microblog start
ExecStop=/home/kim/microblog/bin/microblog stop
Restart=always
RestartSec=5
Environment=PORT=8000
Environment=LANG=en_US.UTF-8
SyslogIdentifier=microblog
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
