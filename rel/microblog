server {
        listen 80;
        listen [::]:80;

        # root /home/kim/www/microblog;
	
	# index index.html;

        server_name microblog.sorryiateallyourpancakes.com www.microblog.sorryiateallyourpancakes.com;

        location / {
            # Send all requests on to the Phoenix server.
            proxy_pass http://localhost:8000;
        }

        location ~* ^.+\.(css|cur|gif|gz|ico|jpg|jpeg|js|png|svg|woff|woff2)$ {
            # Except static assets. Serve those directly.
            root /home/kim/microblog/lib/microblog-0.0.1/priv/static;
            etag off;
            expires max;
            add_header Cache-Control public;
         }     
}
